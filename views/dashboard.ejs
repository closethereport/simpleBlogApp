<%- include("partials/header") %>

  <div class="topnav">
    <a id="homeNav" class="active"  href="/dashboard"></i> Главная</a>
    <a href="/users/newblog">Создать пост</a>
    <a id="signinLink" href="/logout">Выйти из системы</a>
  </div>

  <% if (message && message.length > 0) { %> 
  <div id="flashDiv" class="flash welcome">
    <%= message %> 
  </div>
<% } %>
<% if (message2 && message2.length > 0) { %> 
  <div id="flashDiv" class="flash welcome">
    <%= message2 %> 
  </div>
<% } %>

  <% if (blogs.length == 0) { %>
    <h1 id="noBlogH1">Здесь ничего нет. Будьте первым, кто напишет пост!</h1>
  <% } else { %>  
    <div class="container">
      <% blogs.forEach(function(blog){ %>
        <div class="blogDiv">
          <h2 class="blogDetails"><%= blog.title %></h2>
          <img class="blogImages" src="<%= blog.imgURL %>" alt="blogImage"><br>
          <div class="blogDetails">
            <span id="author-span">Автор: <%= blog.author %> | Дата публикации: <%= blog.dateofPublish %></span>
            <span id="category-span">Категория: <%= blog.category %></span>
            <p class="blogText"><%= blog.blogText.substring(0, 100) %>...</p>
            <a class="readMore-btn" href="/blog/<%= blog.id %> ">Узнать больше</a>
          </div>
        </div>
        <hr>
      <% }); %> 
    </div>
  <% } %> 

  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="scripts/dashboard.js"></script>

<%- include("partials/footer") %>