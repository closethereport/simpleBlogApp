<%- include("partials/header") %>

<% if (message && message.length > 0) { %> 
    <div id="flashDiv" class="flash welcome">
      <%= message %> 
    </div>
<% } %> 

<div class="formDivLr">
    <form class="lrform" action="/users/login" method="post">
        <div class="container1">
            <h1>Вход</h1>
            <label for="inputEmail"><b>Имя пользователя</b></label>
            <input id="inputEmail" type="email" placeholder="Enter Username" name="email" required>
            <label for="inputPassword"><b>Пароль</b></label>
            <input id="inputPassword" type="password" placeholder="Enter Password" name="password" required>
            <button class="lrform-btn" type="submit">Войти</button>
        </div>
        <div class="container1">
          <a href="/"><button type="button" class="cancelbtn">Отмена</button></a>
          <span class="lowerText">Нет аккаунта? <a href="/users/register"> Зарегистрируйтесь</a></span>
        </div>
    </form>
</div>

<%- include("partials/footer") %>